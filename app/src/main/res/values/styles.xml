<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorAccent</item>
    </style>

    <style name="MainActivity" />

    <style name="MainActivity.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Button.EndAction" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/tintEndAction</item>
    </style>

    <style name="TextAppearance"/>

    <style name="TextAppearance.Badge" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="TextAppearance.Badge.Default" parent="TextAppearance.Badge">
        <item name="android:background">@drawable/badge_blue</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.Badge.Success" parent="TextAppearance.Badge">
        <item name="android:background">@drawable/badge_green</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.Badge.Error" parent="TextAppearance.Badge">
        <item name="android:background">@drawable/badge_red</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.Exam.QuestionIndicator" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Exam.QuestionText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.CompassTraining.QuestionText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextAppearance.CompassTraining.AnswerText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:background">@color/null_</item>
        <!-- TODO test this on small screens -->
        <!-- TODO seems like there is a max size depending on screen size -->
        <item name="android:textSize">40sp</item>
    </style>

    <style name="TextAppearance.CompassTraining.AnswerText.Correct" parent="TextAppearance.CompassTraining.AnswerText">
        <item name="android:background">@drawable/badge_green</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.CompassTraining.AnswerText.Wrong" parent="TextAppearance.CompassTraining.AnswerText">
        <item name="android:background">@drawable/badge_red</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Button.CompassTraining.AnswerButton" parent="Widget.MaterialComponents.Button"/>

    <style name="AppTheme.Button.CompassTraining.AnswerButton.Correct" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint" >@color/textPassed</item>
        <item name="backgroundTint">@color/textPassed</item>
    </style>

    <style name="AppTheme.Button.CompassTraining.AnswerButton.Wrong" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint" >@color/textNotPassed</item>
        <item name="backgroundTint">@color/textNotPassed</item>
    </style>

    <style name="AppTheme.RadioButton.ItemRecap" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:minHeight">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
    </style>

</resources>
